<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login_signup"
    app:startDestination="@id/nav_login">

    <fragment
        android:id="@+id/nav_login"
        android:name="com.sudoajay.firebase_chat.fragment.Login"
        android:label="@string/action_login"
        tools:layout="@layout/fragment_login">

        <action
            android:id="@+id/action_nav_login_to_friendsActivity"
            app:destination="@id/friendsActivity" />
        <action
            android:id="@+id/action_nav_login_to_sendFeedback"
            app:destination="@id/sendFeedbackActivity" />

        <action
            android:id="@+id/action_open_signup"
            app:destination="@id/nav_signup"
            app:enterAnim="@anim/fui_slide_in_right"
            app:exitAnim="@anim/fui_slide_out_left" />

    </fragment>


    <fragment
        android:id="@+id/nav_signup"
        android:name="com.sudoajay.firebase_chat.fragment.SignUp"
        android:label="@string/action_signup"
        tools:layout="@layout/fragment_signup">

        <action
            android:id="@+id/action_nav_signup_to_friendsActivity"
            app:destination="@id/friendsActivity"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />
    </fragment>
    <activity
        android:id="@+id/sendFeedbackActivity"
        android:name="com.sudoajay.firebase_chat.activity.sendFeedback.SendFeedback"
        android:label="@string/send_feedback_text"
        tools:layout="@layout/activity_send_feedback" />
    <activity
        android:id="@+id/friendsActivity"
        android:name="com.sudoajay.firebase_chat.activity.FriendsActivity"
        android:label="FriendsActivity"
        tools:layout="@layout/activity_friends">
    </activity>


</navigation>