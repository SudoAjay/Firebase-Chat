<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login_signup"
    app:startDestination="@id/sendFeedback">

    <fragment
        android:id="@+id/nav_login"
        android:name="com.sudoajay.firebase_chat.logInSignUp.Login"
        android:label="@string/action_login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_open_sendFeedback"
            app:destination="@id/sendFeedback"
            app:enterAnim="@anim/nav_default_pop_enter_anim"
            app:exitAnim="@anim/nav_default_pop_exit_anim" />

        <action
            android:id="@+id/action_global_nav_signup"
            app:destination="@id/nav_signup"
            app:enterAnim="@anim/fui_slide_in_right"
            app:exitAnim="@anim/fui_slide_out_left"
            />
    </fragment>


    <fragment
        android:id="@+id/nav_signup"
        android:name="com.sudoajay.firebase_chat.logInSignUp.SignUp"
        android:label="@string/action_signup"
        tools:layout="@layout/fragment_signup">

    </fragment>
    <activity
        android:id="@+id/sendFeedback"
        android:name="com.sudoajay.firebase_chat.sendFeedback.SendFeedback"
        android:label="@string/send_feedback_text"
        tools:layout="@layout/activity_send_feedback" />



</navigation>